# Environment Configuration
ENVIRONMENT=production
APP_DEBUG=false

# Security Configuration
SECRET_KEY=change-me-in-production-min-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS Configuration
ALLOWED_ORIGINS=*
# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY_ID=your-firebase-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n<replace-with-your-private-key>\n-----END PRIVATE KEY-----\n"
FIREBASE_STORAGE_BUCKET=your-firebase-storage-bucket.appspot.com
FIREBASE_SMTP_SERVER=smtp.gmail.com
FIREBASE_SMTP_PORT=465
FIREBASE_SMTP_USE_SSL=true  # or false if using STARTTLS on 587
FIREBASE_EMAIL_USER=your-email@example.com
FIREBASE_EMAIL_PASSWORD=your-email-password
FIREBASE_FROM_NAME=ZODIRA Support
FIREBASE_FROM_EMAIL=support@zodira.app


# Payment Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
